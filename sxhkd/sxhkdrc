# Hide focused window
super + x
    bspc node -g hidden=on


# Unhide the last hidden window
super + shift + x
    ~/.local/bin/unhide_last.sh
    
# open kew as a scratchpad     
super + m
    bspc rule -a Kew state=floating sticky=on center=on rectangle=800x500+0+0 && \
    kitty --class Kew -e kew

#open notes rofi menu
super + n
    ~/.local/bin/rofinotes2.sh 

#music player for rofi dmenu
super + a

# Terminal
super + Return
    wezterm

#open wez term
# super + w
    # /home/hellopradeep/Apps/wezterm/wezterm	
super + w
    kitty
    
#open cool terminal
Pause
    ~/.local/bin/rofi-pkill.sh

# YouTube App
super + y
  brave-browser --app="https://www.youtube.com/"

# Brave browser
super + b
  firefox

# Brave browser
super + shift + b
  brave
      
# Close window
super + q
	bspc node -c

# Reload bspwm and sxhkd
super + shift + r
    bspc wm -r; pkill -USR1 -x sxhkd

# Move between windows
super + {h,j,k,l}
	bspc node -f {west,south,north,east}

# Move focused window
super + shift + {h,j,k,l}
	bspc node -s {west,south,north,east}

# Switch desktop
super + {1-9}
	bspc desktop -f {1-9}

# Move window to desktop
super + shift + {1-9}
	bspc node -d {1-9}

# Run launcher
ctrl + space
	rofi -show drun

# Rofi window switcher
super + Tab
  rofi -show window
  
# Logout / kill session
super + shift + q
	pkill -u $USER

#close the whole bspc {terror}
super + ctrl + q
	bspc quit

# Switch to desktop 0
super + 0
	bspc desktop -f 0

# Send focused window to desktop 0
super + shift + 0
	bspc node -d 0

#wifi controller
super + shift + w
    ~/.local/bin/rofi-wifi.sh

# Screenshot
Print
  gnome-screenshot

#screenshot select tool
shift + Print
  gnome-screenshot -a

# Brightness
XF86MonBrightnessUp
  ~/.local/bin/brightness-notify.sh +5%
XF86MonBrightnessDown
  ~/.local/bin/brightness-notify.sh 5%-

# Volume
XF86AudioRaiseVolume
  pactl set-sink-volume @DEFAULT_SINK@ +10%
XF86AudioLowerVolume
  pactl set-sink-volume @DEFAULT_SINK@ -10%
XF86AudioMute
  pactl set-sink-mute @DEFAULT_SINK@ toggle
XF86AudioMicMute
  pactl set-source-mute @DEFAULT_SOURCE@ toggle

# RFKill toggle with notification
XF86RFKill
  bash -c 'rfkill toggle all && ~/.local/bin/flight-mode-notify.sh'

# Toggle fullscreen mode (like F11)
super + f
    bspc node -t ~fullscreen

# Resize window (hold Super + Alt and press Vim keys)
# expand a window by moving one of its side outward
super + alt + {h, j, k, l}
    bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# Resize window (hold Super and press arrows)
# expand a window by moving one of its side outward
super + alt + {Left, Down, Up, Right}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}
	
# Toggle floating / tiling mode
super + shift + space
    bspc node -t ~floating

# Allow pointer dragging for floating windows
bspc config pointer_modifier mod4  # Super key
bspc config pointer_action1 move
bspc config pointer_action2 resize

# Lock screen (black background)
super + shift + s
    i3lock -c 282a36

# Lock screen and suspend
super + shift + z
    i3lock -c 282a36 && systemctl suspend

#hide as well show polybar when toggle
super + p
    polybar-msg cmd toggle

